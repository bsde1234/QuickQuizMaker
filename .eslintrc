{
  "extends": ["airbnb", "airbnb/hooks", "prettier", "prettier/react"],
  "globals": {
    "document": true,
    "localStorage": true,
    "window": true
  },
  "env": {
    "jest": true
  },
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "react/jsx-props-no-spreading": 0
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    }
  }
}
